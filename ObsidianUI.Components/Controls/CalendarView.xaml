<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObsidianUI.Components.Controls.CalendarView"
             SizeChanged="CalendarView_OnSizeChanged"
             Padding="10">
    <Grid RowDefinitions="0.1*, *">
        <Grid ColumnDefinitions="*,*,*" Grid.Row="0">
            <Button Text="Prev"></Button>
            <Label x:Name="HeaderText" Grid.Column="1"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"></Label>
            <Button Text="Next" Grid.Column="2"></Button>
        </Grid>
        <CarouselView x:Name="CarouselView" Loop="False" Position="1"
                      CurrentItemChanged="CarouselView_OnCurrentItemChanged"
                      Grid.Row="1">
            <CarouselView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal"
                                   SnapPointsType="MandatorySingle"
                                   SnapPointsAlignment="Center"></LinearItemsLayout>
            </CarouselView.ItemsLayout>
        </CarouselView>
    </Grid>
</ContentView>