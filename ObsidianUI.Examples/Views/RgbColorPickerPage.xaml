<?xml version="1.0" encoding="utf-8" ?>
<views:BaseComponentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   xmlns:controls="clr-namespace:ObsidianUI.Components.Controls;assembly=ObsidianUI.Components"
                   xmlns:views="using:ObsidianUI.Examples.Views"
                   x:Class="ObsidianUI.Examples.Views.RgbColorPickerPage"
                   Title="RgbColorPickerPage">
    <Shell.TitleView>
        <HorizontalStackLayout VerticalOptions="Fill">
            <Label Text="Color Picker"
                   FontFamily="Strande2"
                   TextColor="White"
                   Margin="50,0,0,0"
                   VerticalTextAlignment="Center"
                   VerticalOptions="Center"
                   HeightRequest="50"
                   FontSize="Medium" />
        </HorizontalStackLayout>
    </Shell.TitleView>
    <controls:RgbColorPicker Rgb="(50,50,05)" HeightRequest="300" WidthRequest="500" />
</views:BaseComponentPage>